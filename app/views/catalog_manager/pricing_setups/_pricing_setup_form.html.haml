- pricing_setup_disabled = (pricing_setup.new_record? ? false : pricing_setup.disabled?(@user))

#pricing_setup_modal
  .modal-dialog
    .modal-content
      = form_for [:catalog_manager, pricing_setup], remote: true, html: {class: 'form-horizontal'} do |f|
        .modal-header
          %button.close{"aria-label" => "Close", data: {dismiss: 'modal'}, type: "button"}
            %span{"aria-hidden" => "true"} ×
          %h4.modal-title= t(:catalog_manager)[:organization_form][:pricing][:title]
        .modal-body
          - if pricing_setup.new_record?
            = f.hidden_field :organization_id, value: organization.id
          #modal_errors
          %fieldset
            %legend= t(:catalog_manager)[:organization_form][:pricing][:dates]
            .form-group.has-feedback
              = f.label :display_date, t(:catalog_manager)[:organization_form][:pricing][:display_date], class: 'col-sm-4 control-label'
              .col-sm-7
                = f.text_field :display_date, {disabled: pricing_setup_disabled, class: 'form-control datetimepicker'}
                %span.glyphicon.glyphicon-calendar.form-control-feedback

            .form-group.has-feedback
              = f.label :effective_date, t(:catalog_manager)[:organization_form][:pricing][:effective_date], class: 'col-sm-4 control-label'
              .col-sm-7
                = f.text_field :effective_date, {disabled: pricing_setup_disabled, class: 'form-control datetimepicker' }
                %span.glyphicon.glyphicon-calendar.form-control-feedback

            .form-group
              .col-sm-7.col-sm-offset-4.small
                = t(:catalog_manager)[:organization_form][:pricing][:required_field]


          %fieldset
            %legend= t(:catalog_manager)[:organization_form][:pricing][:source_of_price]
            .form-group
              = f.label :charge_master, t(:catalog_manager)[:organization_form][:pricing][:charge_master], class: 'col-sm-4 control-label'
              .col-sm-7
                = f.check_box :charge_master, {disabled: pricing_setup_disabled, checked: pricing_setup.charge_master, data: {toggle: 'toggle', on: 'Yes', off: 'No'}}


          %fieldset
            %legend= t(:catalog_manager)[:organization_form][:pricing][:percent_of_fee]
            .form-group
              = f.label :federal, t(:catalog_manager)[:organization_form][:pricing][:federal], class: 'col-sm-4 control-label'
              .col-sm-7= f.text_field :federal, {disabled: pricing_setup_disabled, class: 'form-control federal_rate_field'}

            - unless pricing_setup_disabled
              .form-group
                .col-sm-7.col-sm-offset-4
                  #apply_federal_percent.btn.btn-primary.btn-xs
                    = t(:catalog_manager)[:organization_form][:pricing][:apply_federal]

            .form-group
              = f.label :corporate, t(:catalog_manager)[:organization_form][:pricing][:corporate], class: 'col-sm-4 control-label'
              .col-sm-7= f.text_field :corporate, {disabled: pricing_setup_disabled, class: 'form-control linked_to_federal'}

            .form-group
              = f.label :other, t(:catalog_manager)[:organization_form][:pricing][:other], class: 'col-sm-4 control-label'
              .col-sm-7= f.text_field :other, {disabled: pricing_setup_disabled, class: 'form-control linked_to_federal'}

            .form-group
              = f.label :member, t(:catalog_manager)[:organization_form][:pricing][:member], class: 'col-sm-4 control-label'
              .col-sm-7= f.text_field :member, {disabled: pricing_setup_disabled, class: 'form-control linked_to_federal'}

            .form-group
              .col-sm-7.col-sm-offset-4.small
                = t(:catalog_manager)[:organization_form][:pricing][:must_be_greater]


          %fieldset
            %legend= t(:catalog_manager)[:organization_form][:pricing][:rates]
            .form-group
              .col-sm-4.text-right
                %h4= t(:catalog_manager)[:organization_form][:pricing][:funding_source]
              .col-sm-7
                %h4= t(:catalog_manager)[:organization_form][:pricing][:rate]
            .form-group
              = f.label :college_rate_type, t(:catalog_manager)[:organization_form][:pricing][:college], class: 'col-sm-4 control-label'
              .col-sm-7= f.select :college_rate_type, options_for_select(Service::RATE_TYPES.map{|p| [p[:display], p[:value]]}, pricing_setup.college_rate_type), {prompt: "--Please Select--"}, disabled: pricing_setup_disabled, class: 'form-control select-type selectpicker'

            .form-group
              = f.label :federal_rate_type, t(:catalog_manager)[:organization_form][:pricing][:federal], class: 'col-sm-4 control-label'
              .col-sm-7= f.select :federal_rate_type, options_for_select(Service::RATE_TYPES.map{|p| [p[:display], p[:value]]}, pricing_setup.federal_rate_type), {prompt: "--Please Select--"}, disabled: pricing_setup_disabled, class: 'form-control select-type selectpicker'

            .form-group
              = f.label :industry_rate_type, t(:catalog_manager)[:organization_form][:pricing][:industry], class: 'col-sm-4 control-label'
              .col-sm-7= f.select :industry_rate_type, options_for_select(Service::RATE_TYPES.map{|p| [p[:display], p[:value]]}, pricing_setup.industry_rate_type), {prompt: "--Please Select--"}, disabled: pricing_setup_disabled, class: 'form-control select-type selectpicker'

            .form-group
              = f.label :investigator_rate_type, t(:catalog_manager)[:organization_form][:pricing][:investigator], class: 'col-sm-4 control-label'
              .col-sm-7= f.select :investigator_rate_type, options_for_select(Service::RATE_TYPES.map{|p| [p[:display], p[:value]]}, pricing_setup.investigator_rate_type), {prompt: "--Please Select--"}, disabled: pricing_setup_disabled, class: 'form-control select-type selectpicker'

            .form-group
              = f.label :internal_rate_type, t(:catalog_manager)[:organization_form][:pricing][:internal], class: 'col-sm-4 control-label'
              .col-sm-7= f.select :internal_rate_type, options_for_select(Service::RATE_TYPES.map{|p| [p[:display], p[:value]]}, pricing_setup.internal_rate_type), {prompt: "--Please Select--"}, disabled: pricing_setup_disabled, class: 'form-control select-type selectpicker'

            .form-group
              = f.label :foundation_rate_type, t(:catalog_manager)[:organization_form][:pricing][:foundation], class: 'col-sm-4 control-label'
              .col-sm-7= f.select :foundation_rate_type, options_for_select(Service::RATE_TYPES.map{|p| [p[:display], p[:value]]}, pricing_setup.foundation_rate_type), {prompt: "--Please Select--"}, disabled: pricing_setup_disabled, class: 'form-control select-type selectpicker'

            .form-group
              = f.label :unfunded_rate_type, t(:catalog_manager)[:organization_form][:pricing][:unfunded], class: 'col-sm-4 control-label'
              .col-sm-7= f.select :unfunded_rate_type, options_for_select(Service::RATE_TYPES.map{|p| [p[:display], p[:value]]}, pricing_setup.unfunded_rate_type), {prompt: "--Please Select--"}, disabled: pricing_setup_disabled, class: 'form-control select-type selectpicker'

            .form-group
              .col-sm-7.col-sm-offset-4.small
                = t(:catalog_manager)[:organization_form][:pricing][:required_field]




            .clearfix
        .modal-footer
          %button.btn.btn-default{data: {dismiss: 'modal'}, type: 'button'} Close
          - unless pricing_setup_disabled
            %input#pricing_setup_submit.btn.btn-primary{type: 'submit', value: t(:actions)[:save]}
